{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "private": false,
      "required": true,
      "maxLength": 50,
      "minLength": 5
    },
    "content": {
      "type": "text",
      "required": true,
      "unique": true,
      "minLength": 100
    },
    "rating": {
      "type": "integer",
      "max": 10,
      "min": 1
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    }
  }
}
